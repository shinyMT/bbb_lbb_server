<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.thy.bbb_lbb.mapper.PoopMapper">
    <!--实体映射-->
    <resultMap type="com.thy.bbb_lbb.domain.po.PoopPO" id="poopMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="poopTime" column="poop_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询用户指定年月的所有记录-->
    <select id="listByYearMonth" resultMap="poopMap">
        select id,user_id,poop_time
        from poop
        <where>
            <if test="userId != null">
                user_id = #{userId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into poop(user_idpoop_time)
        values (#{userId}#{poopTime})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update poop
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="poopTime != null">
                poop_time = #{poopTime},
            </if>
        </set>
        where id = #{id}
    </update>
</mapper>
